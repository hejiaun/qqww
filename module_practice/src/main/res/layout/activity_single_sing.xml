<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/duchang_bg"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:paddingLeft="6dp"
    android:paddingRight="6dp">

    <include layout="@layout/include_songname_titlebar" />

    <me.wcy.lrcview.LrcView
        android:id="@+id/lrc"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        app:lrcCurrentTextColor="@color/white">


    </me.wcy.lrcview.LrcView>

    <example.common_base.widget.SongProgressView
        android:id="@+id/spv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp" />

    <!--<include layout="@layout/include_play_bottom_controler" />-->

    <example.common_base.widget.MusicControlerView
        android:id="@+id/mcv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></example.common_base.widget.MusicControlerView>
</LinearLayout>