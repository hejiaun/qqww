<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shape_round_red_border"
        android:padding="4dp"
        android:text="胜利(排位)" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="16:44  5-14" />

    <TextView
        android:id="@+id/tv_music_coin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:drawablePadding="2dp"
        android:drawableRight="@drawable/icon_yinyuebi"
        android:text="22"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/tv_flower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_music_coin"
        android:layout_gravity="right"
        android:drawablePadding="2dp"
        android:drawableRight="@drawable/icon_flower"
        android:text="22"
        android:textSize="@dimen/sp_12" />

</LinearLayout>