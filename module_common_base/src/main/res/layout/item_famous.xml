<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:paddingTop="2dp"
    android:paddingBottom="2dp">

    <TextView
        android:id="@+id/tv_number"
        android:layout_width="42dp"
        android:layout_height="@dimen/famousListImageSize_44dp"
        android:clickable="true"
        android:gravity="center"
        android:text="1"
        android:textColor="#fe4646"
        android:textSize="28sp"
        android:textStyle="bold" />

    <LinearLayout style="@style/horizontalWeight">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_rank"
            style="@style/famousImageViewStyle" />
    </LinearLayout>

    <!--<LinearLayout style="@style/horizontalWeight">-->

    <!--<com.makeramen.roundedimageview.RoundedImageView-->
    <!--android:id="@+id/iv_guide"-->
    <!--style="@style/famousImageViewStyle" />-->
    <!--</LinearLayout>-->

    <LinearLayout style="@style/horizontalWeight">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_judge"
            style="@style/famousImageViewStyle" />
    </LinearLayout>

    <LinearLayout style="@style/horizontalWeight">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_popularity"
            style="@style/famousImageViewStyle" />
    </LinearLayout>

    <LinearLayout style="@style/horizontalWeight">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_song"
            style="@style/famousImageViewStyle" />
    </LinearLayout>
</LinearLayout>