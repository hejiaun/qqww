<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/iv_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:text="1"
        android:textSize="22sp"
        android:textStyle="italic" />

    <RelativeLayout
        android:id="@+id/rl_head"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:gravity="center">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/ivNoChorus"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/example"
            app:riv_corner_radius="6dp" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/ivChorus1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/shape_edittext_deep_bg"
            app:riv_corner_radius="6dp" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/ivChorus2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/shape_edittext_deep_bg"
            app:riv_corner_radius="6dp" />

        <TextView
            android:id="@+id/tvChorus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="合" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="6dp"
        android:layout_weight="3"
        android:background="@drawable/shape_border_white_round_4dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:src="@drawable/icon_mine_guanxi_shouting_xiayishou" />

        <include layout="@layout/include_item_progress" />


    </LinearLayout>

</LinearLayout>