<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="8dp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/ivHead"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:foreground="@drawable/selector_foreground_gray_round"
        android:src="@drawable/example"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_corner_radius="6dp" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_toRightOf="@id/ivHead"
        android:clickable="true"
        android:drawableLeft="@drawable/icon_fensibangdan_man"
        android:drawablePadding="2dp"
        android:text="我我我我"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/ivHead"
        app:layout_constraintTop_toTopOf="@+id/ivHead" />

    <ImageView
        android:id="@+id/ivEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:clickable="true"
        android:src="@drawable/icom_mine_xingming_fuzhi"
        app:layout_constraintBottom_toBottomOf="@+id/tv_name"
        app:layout_constraintStart_toEndOf="@+id/tv_name"
        app:layout_constraintTop_toTopOf="@+id/tv_name" />

    <TextView
        android:id="@+id/btn_follow"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_toLeftOf="@id/tv_chat"
        android:background="@drawable/shape_edittext_deep_bg"
        android:clickable="true"
        android:gravity="center"
        android:padding="4dp"
        android:text="关注"
        android:textColor="@drawable/selector_font_shallow"
        android:textSize="@dimen/sp_16"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_name"
        app:layout_constraintEnd_toStartOf="@+id/tv_chat" />

    <TextView
        android:id="@+id/tv_chat"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="2dp"
        android:background="@drawable/shape_border_black"
        android:clickable="true"
        android:gravity="center"
        android:padding="4dp"
        android:text="聊天"
        android:textColor="@drawable/selector_font_deep_purple"
        android:textSize="@dimen/sp_16"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_follow"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginStart="4dp"
        android:text="年龄"
        app:layout_constraintBottom_toTopOf="@+id/tv2"
        app:layout_constraintStart_toEndOf="@+id/ivHead"
        app:layout_constraintTop_toBottomOf="@+id/tv_name" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="身高"
        app:layout_constraintBottom_toBottomOf="@+id/ivHead"
        app:layout_constraintStart_toEndOf="@+id/ivHead" />

    <TextView
        android:id="@+id/tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="星座"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv1"
        app:layout_constraintStart_toStartOf="@+id/btn_follow" />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:text="性格"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv2"
        app:layout_constraintStart_toStartOf="@+id/tv4" />

    <TextView
        android:id="@+id/tvAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv1"
        app:layout_constraintStart_toEndOf="@+id/tv1" />

    <TextView
        android:id="@+id/tvHeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv2"
        app:layout_constraintStart_toEndOf="@+id/tv2" />

    <TextView
        android:id="@+id/tvConstellation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv4"
        app:layout_constraintStart_toEndOf="@+id/tv4" />

    <TextView
        android:id="@+id/tvCharacter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv3"
        app:layout_constraintStart_toEndOf="@+id/tv3" />

</android.support.constraint.ConstraintLayout>
