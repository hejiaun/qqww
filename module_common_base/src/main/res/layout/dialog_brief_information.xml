<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/shape_card_round_white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvReport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:text="举报"
            android:textColor="@color/fontGray" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="我叫小龙女"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvState"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="状态：求撩"
            android:textColor="@color/fontGray"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                style="@style/horizontalWeight"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/stvRankLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="白银二"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="段位" />
            </LinearLayout>

            <LinearLayout
                style="@style/horizontalWeight"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="43"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="作品" />
            </LinearLayout>

            <LinearLayout
                style="@style/horizontalWeight"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvFansNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="432"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="粉丝" />
            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lineGray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <LinearLayout style="@style/horizontalWeight">

                <TextView
                    android:id="@+id/tvChat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_border_white_round_4dp"
                    android:clickable="true"
                    android:padding="6dp"
                    android:text="聊天"
                    android:textColor="@drawable/selector_font_deep_purple"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <LinearLayout
                style="@style/horizontalWeight"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvFollow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_border_red_round_4dp"
                    android:clickable="true"
                    android:padding="6dp"
                    android:text="+关注"
                    android:textColor="@drawable/selector_font_shallow"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/ivHead"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:src="@drawable/example"
        app:riv_border_color="@color/fontGray"
        app:riv_border_width="1dp"
        app:riv_corner_radius="30dp" />


</RelativeLayout>