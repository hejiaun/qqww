<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:padding="8dp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/ivHead"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginRight="2dp"
        android:src="@drawable/example"
        app:riv_corner_radius="44dp" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="6dp"
        android:layout_weight="3"
        android:background="@drawable/shape_border_white_round_4dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:src="@drawable/icon_mine_guanxi_shouting_xiayishou" />

        <include layout="@layout/include_item_progress" />


    </LinearLayout>

    <TextView
        android:id="@+id/btn_chours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_border_white_round_4dp"
        android:clickable="true"
        android:gravity="center"
        android:padding="6dp"
        android:text="合唱"
        android:textColor="@color/black"
        android:textSize="@dimen/fontSize_16sp" />

</LinearLayout>