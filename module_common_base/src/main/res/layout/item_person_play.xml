<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:padding="8dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/ivHead"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginRight="2dp"
            android:src="@drawable/example"
            app:riv_corner_radius="6dp" />


        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tvGoodRate"
            android:layout_alignTop="@id/tv_name"
            android:layout_marginBottom="4dp"
            android:clickable="true"
            android:drawableLeft="@drawable/icon_fensibangdan_man"
            android:text="我我我我"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvGoodRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/ivHead"
            android:layout_marginRight="4dp"
            android:layout_toRightOf="@id/ivHead"
            android:background="@drawable/shape_border_white_round_4dp"
            android:clickable="true"
            android:padding="2dp"
            android:text="段位"
            android:textSize="14sp" />

        <TextView
            android:layout_alignBottom="@id/ivHead"
            android:id="@+id/tv_getValidateCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tvGoodRate"
            android:background="@drawable/shape_border_white_round_4dp"
            android:clickable="true"
            android:padding="2dp"
            android:text="星级"
            android:textSize="14sp" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="6dp"
        android:layout_weight="3"
        android:background="@drawable/shape_border_white_round_4dp"
        android:gravity="center_vertical"
        android:padding="2dp">

        <ImageView
            android:id="@+id/iv_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:clickable="true"
            android:src="@drawable/gequxiangqing_btn_bofang_n_red" />

        <include layout="@layout/include_item_progress" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tiaoge_btn_next" />

    </LinearLayout>

    <TextView
        android:id="@+id/btn_follow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:background="@drawable/shape_border_white_round_4dp"
        android:clickable="true"
        android:gravity="center"
        android:padding="8dp"
        android:text="关注"
        android:textColor="@drawable/selector_font_deep_black"
        android:textSize="@dimen/sp_14" />

</LinearLayout>