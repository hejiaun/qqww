<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_card_round_white"
    android:paddingLeft="32dp"
    android:paddingTop="6dp"
    android:paddingRight="14dp"
    android:paddingBottom="6dp">


    <TextView
        android:id="@+id/tv_coinNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:drawableTop="@drawable/common_icon_money"
        android:gravity="center"
        android:text="音乐币"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btnPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@id/tv_coinNum"
        android:background="@drawable/shape_round_red_6dp"
        android:clickable="true"
        android:gravity="center"
        android:minHeight="0dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:text="¥"
        android:textColor="@color/white" />

    <example.common_base.widget.NumberPickerView
        android:id="@+id/npv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" />

</RelativeLayout>