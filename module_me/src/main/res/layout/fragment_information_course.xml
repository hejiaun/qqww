<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#37ffffff"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/ctlCourse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="1dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        app:tl_iconVisible="false"
        app:tl_indicator_color="@color/red_select"
        app:tl_indicator_corner_radius="4dp"
        app:tl_indicator_height="2dp"
        app:tl_indicator_margin_bottom="1dp"
        app:tl_indicator_style="NORMAL"
        app:tl_indicator_width="20dp"
        app:tl_textSelectColor="@color/red_select"
        app:tl_textUnselectColor="@color/black"
        app:tl_textsize="14sp"></com.flyco.tablayout.CommonTabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vpCourse"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>