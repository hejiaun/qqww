<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/listBackground"
    android:orientation="vertical">

    <include layout="@layout/include_others_information_head" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:padding="6dp">

        <TextView
            android:id="@+id/tvState"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivHead"
            android:layout_weight="1"
            android:background="@drawable/shape_edittext_deep_bg"
            android:clickable="true"
            android:gravity="center"
            android:padding="4dp"
            android:text="状态：求撩 查户口的滚犊子"
            android:textColor="@drawable/selector_font_shallow" />

    </LinearLayout>

    <example.common_base.widget.RankDataAnalysisView
        android:id="@+id/rdav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp" />


    <LinearLayout
        android:id="@+id/llPower"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:background="@color/white"
        android:padding="6dp">

        <LinearLayout
            android:id="@+id/llStarFriend"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="星标朋友" />

            <Switch
                android:id="@+id/swStarFriend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llOthersMusicCircle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="他的音乐圈" />

            <Switch
                android:id="@+id/swOthersMusicCircle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llMyMusicCircle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的音乐圈" />

            <Switch
                android:id="@+id/swMyMusicCircle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llBlackList"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="黑名单" />

            <Switch
                android:id="@+id/swBlackList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </LinearLayout>

    <example.common_base.widget.FunctionItemView
        android:id="@+id/fivTel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:clickable="true" />

    <example.common_base.widget.FunctionItemView
        android:id="@+id/fivAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:clickable="true" />

    <example.common_base.widget.FunctionItemView
        android:id="@+id/fivFood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:clickable="true" />

    <example.common_base.widget.FunctionItemView
        android:id="@+id/fivMoive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:clickable="true" />

    <example.common_base.widget.FunctionItemView
        android:id="@+id/fivOther"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:clickable="true" />


</LinearLayout>