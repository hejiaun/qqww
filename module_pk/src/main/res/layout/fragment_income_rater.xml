<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/linearLayout10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/rhv1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/yinyuequan_btn_zan_n" />

            <example.common_base.widget.BorderTextView
                android:id="@+id/borderTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="好评率"
                android:textColor="#39D5F7"
                android:textSize="48dp"
                app:borderTextColor="@color/white"
                app:borderWidth="2dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvPraiseRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="67%\t\t好评率"
            android:textColor="@color/white"
            android:textSize="24dp" />
    </LinearLayout>


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/rhv1"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/jielun"
        app:layout_constraintBottom_toBottomOf="@+id/rhv2"
        app:layout_constraintEnd_toStartOf="@+id/rhv2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/rhv2"
        app:riv_corner_radius="100dp" />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/rhv2"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/wanfeng"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/rhv1"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_corner_radius="100dp" />

    <TextView
        android:id="@+id/tvFollowRater1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_follow"
        android:clickable="true"
        android:paddingLeft="6dp"
        android:paddingTop="2dp"
        android:paddingRight="6dp"
        android:paddingBottom="2dp"
        android:text="跟随"
        android:textColor="@drawable/selector_font_shallow"
        android:textSize="@dimen/sp_14"
        app:layout_constraintBottom_toBottomOf="@+id/tvFollowRater2"
        app:layout_constraintEnd_toEndOf="@+id/rhv1"
        app:layout_constraintStart_toStartOf="@+id/rhv1"
        app:layout_constraintTop_toTopOf="@+id/tvFollowRater2" />

    <TextView
        android:id="@+id/tvFollowRater2"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/shape_follow"
        android:clickable="true"
        android:paddingLeft="6dp"
        android:paddingTop="2dp"
        android:paddingRight="6dp"
        android:paddingBottom="2dp"
        android:text="跟随"
        android:textColor="@drawable/selector_font_shallow"
        android:textSize="@dimen/sp_14"
        app:layout_constraintEnd_toEndOf="@+id/rhv2"
        app:layout_constraintStart_toStartOf="@+id/rhv2"
        app:layout_constraintTop_toBottomOf="@+id/tvRaterName2" />

    <TextView
        android:id="@+id/tvRaterName1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="周杰伦"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/tvRaterName2"
        app:layout_constraintEnd_toEndOf="@+id/rhv1"
        app:layout_constraintStart_toStartOf="@+id/rhv1"
        app:layout_constraintTop_toTopOf="@+id/tvRaterName2" />

    <TextView
        android:id="@+id/tvRaterName2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="汪峰"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/rhv2"
        app:layout_constraintStart_toStartOf="@+id/rhv2"
        app:layout_constraintTop_toBottomOf="@+id/rhv2" />

</android.support.constraint.ConstraintLayout>