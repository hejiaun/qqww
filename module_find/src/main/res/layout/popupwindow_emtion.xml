<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:background="@drawable/shape_border_black_round6dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvLikePop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:drawableLeft="@drawable/mine_icon_zan"
        android:padding="4dp"
        android:text="点赞"
        android:textColor="@drawable/selector_font_deep_black" />

    <TextView
        android:id="@+id/tvCarePop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:drawableLeft="@drawable/mine_icon_zan"
        android:padding="4dp"
        android:text="关心"
        android:textColor="@drawable/selector_font_deep_black" />

    <TextView
        android:id="@+id/tvDislikePop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:drawableLeft="@drawable/mine_icon_cai"
        android:padding="4dp"
        android:text="踩踩"
        android:textColor="@drawable/selector_font_deep_black" />

</LinearLayout>
